<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        android:scaleType="fitXY"
        android:id="@+id/imageViewbaihat"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewbaihathot"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/imageViewbaihat"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#363636"
        android:text="Tên bài hát"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewtencasibaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/imageViewbaihat"
        android:singleLine="true"
        android:text="Ca sĩ"
        android:textSize="15sp"
        android:textColor="#8c8a8a"
        android:layout_below="@id/textViewbaihathot"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/imageViewluotthich"
        android:src="@drawable/iconlove"
        android:layout_marginRight="10dp"/>
</RelativeLayout>