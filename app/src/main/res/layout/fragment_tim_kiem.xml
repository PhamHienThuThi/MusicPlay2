<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:background="#285BC4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbarlayouttimkiembaihat">
    </android.support.design.widget.AppBarLayout>
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbartimkiembaihat">

        </android.support.v7.widget.Toolbar>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relative1timkiembaihat"
            android:layout_below="@+id/toolbartimkiembaihat">

        </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textViewkhongcodl"
        android:text="không có dữ liệu bài hát"
        android:gravity="center"
        android:textColor="#f20"
        android:textSize="25sp"
        android:visibility="gone"
        />
</RelativeLayout>