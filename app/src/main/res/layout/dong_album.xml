<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/Linearcarview">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/imageViewalbum"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/textViewtenalbum"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="đúng người đúng thời điểm"
            android:textSize="20sp"
            android:maxWidth="200dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/textViewtencsalbum"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Thanh Hưng"
            android:textColor="#9e9797"
            android:textSize="15sp"
            android:maxWidth="200dp"

            />
    </LinearLayout>


</android.support.v7.widget.CardView>